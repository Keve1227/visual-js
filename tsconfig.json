{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./src/",
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "paths": {
            "@": ["./", "./index.ts"],
            "@/*": ["./*"]
        },
        "preserveValueImports": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext"
    }
}
